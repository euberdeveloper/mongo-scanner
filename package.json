{
  "name": "mongo-scanner",
  "version": "1.3.0",
  "description": "An npm module to retrieve the databases and the collections of a mongodb.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "transpile": "tsc",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "lint:fix": "tslint --project tsconfig.json --config tslint.json --fix",
    "db:clean": "mongo-cleaner clean -y --throwIfNotTotal",
    "db:restore": "mongorestore test/mock --quiet",
    "db:populate": "npm run db:clean && npm run db:restore",
    "test": "mocha --reporter spec",
    "nyc": "nyc --extension=ts --reporter=html --reporter=text --reporter=lcov -x \"source\\errors\" -x \"source/errors\" -x \"test\" npm run test",
    "cover:coveralls": "nyc report --extension=ts --reporter=text-lcov | coveralls",
    "cover:codecov": "nyc report --extension=ts --reporter=text-lcov > coverage.lcov && codecov",
    "cover": "npm run cover:coveralls && npm run cover:codecov",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/euberdeveloper/mongo-scanner.git"
  },
  "author": "Eugenio Vinicio Berretta <euberdeveloper@gmail.com>",
  "license": "GNU",
  "bugs": {
    "url": "https://github.com/euberdeveloper/mongo-scanner/issues"
  },
  "homepage": "https://github.com/euberdeveloper/mongo-scanner#readme",
  "keywords": [
    "mongo-scanner",
    "mongo",
    "mongodb",
    "database",
    "collections",
    "schema",
    "database-schema",
    "mongo-schema",
    "scanner"
  ],
  "dependencies": {
    "mongodb": "^3.4.1"
  },
  "devDependencies": {
    "@types/mongodb": "^3.3.14",
    "@types/node": "^13.1.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.6.1",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.9",
    "cz-conventional-changelog": "^3.0.2",
    "mocha": "^6.2.2",
    "mongo-cleaner": "^3.0.3",
    "nyc": "^15.0.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
