{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "lib": [ "es2015" ],
        "outDir": "./dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./source/*"
            ],
            "@src/*": [
                "./source/*"
            ],
            "@test/*": [
                "./test/*"
            ]
        }
    },
    "include": [ "source", "test", "test/**/*.test.json" ]
}